<div class="video-tabs-wrapper">
  <h2 class="video-heading">Videos</h2>

  <div class="tabs-menu">
    {% assign first_tab = true %}
    {% for block in section.blocks %}
      <button
        class="tab-button{% if first_tab %} active{% endif %}"
        data-tab="tab-{{ block.id }}">
        {{ block.settings.tab_title }}
      </button>
      {% assign first_tab = false %}
    {% endfor %}
  </div>

  <div class="tabs-content">
    {% assign first_content = true %}
    {% for block in section.blocks %}
      <div class="tab-content{% if first_content %} active{% endif %}" id="tab-{{ block.id }}">
        <div class="tab-grid">
          {% for i in (1..6) %}
            {% assign key = "item_" | append: i %}
             {% assign label = block.settings[key] %}
            {% if label != blank %}
              <div class="tab-grid-item">{{ label }}</div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
      {% assign first_content = false %}
    {% endfor %}
  </div>
  
</div>

<style>
  .video-tabs-wrapper {
    background: #ecead7;
    padding: 30px;
    border-top: 5px solid #6b8e4e;
    border-bottom: 5px solid #6b8e4e;
  }

  .video-heading {
    color: #5a7e42;
    font-size: 40px;
    font-weight: 800;
    margin-bottom: 20px;
  }

  .tabs-menu {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    margin-bottom: 20px;
  }

  .tab-button {
    background: #cbd5b3;
    color: #5a7e42;
    font-weight: 600;
    padding: 12px 24px;
    border: none;
    cursor: pointer;
    transition: background 0.3s ease;
  }

  .tab-button.active {
    background: #6b8e4e;
    color: #fff;
  }

  .tabs-content .tab-content {
    display: none;
  }

  .tabs-content .tab-content.active {
    display: block;
  }

  .tab-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 20px;
  }

  .tab-grid-item {
    background: #cbd5b3;
    color: #4b6e3e;
    text-align: center;
    padding: 20px;
    font-weight: 600;
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const buttons = document.querySelectorAll(".tab-button");
    const contents = document.querySelectorAll(".tab-content");

    buttons.forEach(button => {
      button.addEventListener("click", function () {
        const tabId = this.getAttribute("data-tab");

        buttons.forEach(btn => btn.classList.remove("active"));
        this.classList.add("active");

        contents.forEach(content => {
          content.classList.remove("active");
          if (content.id === tabId) content.classList.add("active");
        });
      });
    });
  });
</script>

{% schema %}
{
  "name": "Tabbed Video Section",
  "blocks": [
    {
      "type": "tab",
      "name": "Tab",
      "settings": [
        {
          "type": "text",
          "id": "tab_title",
          "label": "Tab Title"
        },
        {
          "type": "text",
          "id": "item_1",
          "label": "Grid Item 1"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Video Tabs",
      "category": "Custom"
    }
  ]
}
{% endschema %}
