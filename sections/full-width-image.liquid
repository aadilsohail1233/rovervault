{%- style -%}
  .section-{{ section.id }} {
    margin-top: {{ section.settings.margin_top | times: 0.5 | round: 0 }}px;
    margin-bottom: {{ section.settings.margin_bottom | times: 0.5 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }} {
      margin-top: {{ section.settings.margin_top }}px;
      margin-bottom: {{ section.settings.margin_bottom }}px;
    }
  }

  .image-wrapper {
  }

  .image-wrapper img{
    width: 100%;
    border: 5px solid rgba(var(--color-secondary-button-text));
  }

  .section__image {
    max-width: 100%;
  }
{%- endstyle -%}

<div class="section-{{ section.id }} gradient color-{{ section.settings.section_color_scheme }}">
  <div class="page-width">
    <div class="image-wrapper">
      {% if product.featured_image %}
        <img
          src="{{ product.featured_image | img_url: 'master' }}"
          class="section__image"
          alt="{{ product.title }}"
        >
      {% else %}
        <img
          src="{{ section.settings.image | img_url: 'master' }}"
          class="section__image"
          alt="Background"
        >
      {% endif %}
    </div>
  </div>
</div>


{% schema %}
{
  "name": "Full Width Image",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin Bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Full Width Image",
      "category": "Image"
    }
  ]
}
{% endschema %}
