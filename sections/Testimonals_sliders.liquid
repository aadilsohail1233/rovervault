{% schema %}
{
  "name": "Testimonial Slider",
  "tag": "section",
  "class": "testimonial-slider-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "SELLER TESTIMONIALS"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "textarea",
          "id": "quote",
          "label": "Testimonial Text"
        },
        {
          "type": "image_picker",
          "id": "photo",
          "label": "Author Photo"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Author Name"
        },
        {
          "type": "text",
          "id": "location",
          "label": "Location"
        }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    {
      "name": "Testimonial Slider",
      "category": "Testimonials",
      "blocks": [
        {
          "type": "testimonial"
        },
        {
          "type": "testimonial"
        },
        {
          "type": "testimonial"
        }
      ]
    }
  ]
}
{% endschema %}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css" />


<div class="testimonial-slider-wrapper">
  <div class="feature-heading font-vvds" style="text-align:center;">{{ section.settings.title }}</div>

  <div class="testimonial-slider swiper">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide testimonial-card">
          <p class="quote">{{ block.settings.quote }}</p>
          <div class="testimonial-footer">
            {% if block.settings.photo %}
              <img src="{{ block.settings.photo | image_url: width: 40 }}" alt="{{ block.settings.name }}" class="testimonial-photo">
            {% endif %}
            <p class="author"><strong>{{ block.settings.name }}</strong>, {{ block.settings.location }}</p>
          </div>
        </div>
      {% endfor %}
    </div>

    <!-- Navigation -->
  <div class="swiper-controls-wrap">
    <div class="slider-controls">
  <div class="swiper-button-prev">
<svg width="67" height="46" viewBox="0 0 67 46" fill="none" xmlns="http://www.w3.org/2000/svg">
<path d="M24 3L4 23M4 23L24 43M4 23H64" stroke="#6B8D50" stroke-width="5" stroke-linecap="round"/>
</svg>

</div>
  <div class="swiper-pagination"></div>
  <div class="swiper-button-next">
<svg width="67" height="46" viewBox="0 0 67 46" fill="none" xmlns="http://www.w3.org/2000/svg">
<path d="M43 3L63 23M63 23L43 43M63 23H3" stroke="#6B8D50" stroke-width="5" stroke-linecap="round"/>
</svg>

</div>
</div>
  </div>
  </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>


<style>
.testimonial-slider-wrapper {
  background: #f0eecf;
  padding: 3rem 1rem;
  text-align: center;
}

.testimonial-title {
  font-size: 2rem;
  color: #3b6e3b;
  font-weight: bold;
  text-transform: uppercase;
  margin-bottom: 2rem;
}



.testimonial-card {
  background: transparent;
  padding: 1rem;
  border: 5px solid #6b8d50;
  min-height: 220px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-shadow: 0 2px 6px rgba(0,0,0,0.05);
}

.quote {
  font-size: 14px;
  font-style: italic;
  margin-bottom: 1rem;
  color: #333;
  line-height: 1.5;
}

.testimonial-footer {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  margin-top: 1rem;
}

.testimonial-photo {
  width: 30px;
  height: 30px;
  border-radius: 50%;
  object-fit: cover;
  border: 1px solid #ddd;
}

.author {
  font-size: 13px;
  color: #3b6e3b;
  font-weight: bold;
}

.testimonial-pagination-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 1rem;
  gap: 0.5rem;
}

.swiper-pagination {
  display: flex;
  justify-content: center;
  gap: 8px;
}

.swiper-pagination-bullet {
  width: 10px;
  height: 10px;
  background: #3b6e3b;
  opacity: 0.3;
  border-radius: 50%;
  transition: opacity 0.3s;
}

.swiper-pagination-bullet-active {
  opacity: 1;
}

.testimonial-arrows {
  display: flex;
  gap: 2rem;
  justify-content: center;
  align-items: center;
}

.swiper-button-prev,
.swiper-button-next {
  cursor: pointer;
  font-size: 24px;
  color: #3b6e3b;
  background-color: transparent;
  border: none;
  padding: 0.5rem;
  transition: transform 0.2s;
}

.swiper-button-prev:hover,
.swiper-button-next:hover {
  transform: scale(1.1);
}

</style>

<script>
document.addEventListener('DOMContentLoaded', function () {
  new Swiper('.testimonial-slider', {
    loop: true,
    pagination: {
      el: '.swiper-pagination',
      clickable: true,
    },
    navigation: {
      nextEl: '.swiper-button-next',
      prevEl: '.swiper-button-prev',
    },
    slidesPerView: 1,
    breakpoints: {
      768: {
        slidesPerView: 2,
        spaceBetween: 20,
      },
      1024: {
        slidesPerView: 3,
        spaceBetween: 30,
      },
    },
  });
});
</script>
