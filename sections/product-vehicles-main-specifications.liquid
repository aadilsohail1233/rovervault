{%- style -%}
  .section-{{ section.id }} {
    margin-top: {{ section.settings.margin_top | times: 0.5 | round: 0 }}px;
    margin-bottom: {{ section.settings.margin_bottom | times: 0.5 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }} {
      margin-top: {{ section.settings.margin_top }}px;
      margin-bottom: {{ section.settings.margin_bottom }}px;
    }
  }

  .vehicles-main-specifications-wrapper {
    display: grid;
    grid-template-columns: auto auto auto auto;
    gap: 20px;
  }
{%- endstyle -%}

<div class="section-{{ section.id }} gradient color-{{ section.settings.section_color_scheme }}">
  <div class="page-width">
    <div class="vehicles-main-specifications-wrapper">
      <div class="vehicles-main__specification">
        <div class="vehicles-main__specification-title">
          <h2>ENGINE</h2>
        </div>
        <div class="vehicles-main__specification-value">
          {% if product.metafields.vehicles_main %}
            <p>{{ product.metafields.vehicles_main | json }}</p>
          {% else %}
            <p>Not Available</p>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Vehicle Main Speci",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin Bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Vehicles Main Specifications",
      "category": "Image"
    }
  ]
}
{% endschema %}
