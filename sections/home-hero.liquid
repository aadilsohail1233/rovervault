{%- style -%}
  @media screen and (max-width: 420px) {
    .section-{{ section.id }} {
      display: none;
    }
  }

  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .home-hero-wrapper {
    display: flex;
    align-items: center;
    width: 100%;
    gap: 35px;
  }

  .home-hero-first {
    width: 20%;
  }

  .home-hero-second {
    flex: 1;
  }

  .home-hero__first-image,
  .home-hero__second-image {
    width: 100%;
  }
{%- endstyle -%}

<div class="section-{{ section.id }} section-{{ section.id }}-padding gradient color-{{ section.settings.section_color_scheme }}">
  <div class="page-width">
    <div class="home-hero-wrapper">
      <div class="home-hero-first">
        <img src="{{ section.settings.first-image | img_url: 'master' }}" alt="Logo" class="home-hero__first-image">
      </div>

      <div class="home-hero-second">
        <img
          src="{{ section.settings.second-image | img_url: 'master' }}"
          alt="Rover Vault"
          class="home-hero__second-image"
        >
      </div>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Home hero",

  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "first-image",
      "label": "t:sections.image-with-text.settings.image.label"
    },
    {
      "type": "image_picker",
      "id": "second-image",
      "label": "t:sections.image-with-text.settings.image.label"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [{ "name": "Home hero" }]
}
{% endschema %}
