{%- style -%}
  .section-{{ section.id }}-margin {
    margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ section.settings.margin_bottom | times: 0.75 | round: 0 }}px;
  }
  .image-show-footer-tablet{
  display:none;
}
.image-show-footer-mobile{
 display:none; 
}  

   @media screen and (max-width: 600px) {
.image-show-footer-tablet{
      display:none !important;
    }
.image-show-footer-mobile{
 display:inline-block; 
}      
.image-show-footer-mobile img { 
      margin-top: -55px;
    width: 106%;
    margin-left: -3%;
    position: relative;

}
   }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-margin {
      margin-top: {{ section.settings.margin_top }}px;
      margin-bottom: {{ section.settings.margin_bottom }}px;
    }
  }

  .vehicle-advantages-show-wrapper {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 55px;
  }

  .vehicle-advantages-show-image img {
    width: 100%;
  }

  .vehicle-advantages-show-content {
    border: 5px solid #6B8D50;
    text-align: center;
    display: flex;
    align-items: center;
    padding: 0px 55px;
    color: #6B8D50;
  }

  @media screen and (max-width: 850px) {
    .vehicle-advantages-show-wrapper {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .vehicle-advantages-show-content {
      padding: 30px 10px;
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-margin gradient">
  <div class="page-width">
    <div class="vehicle-advantages-show-wrapper">
      <div class="vehicle-advantages-show-image">
        <img src="{{ section.settings.image | img_url: 'master' }}" alt="Vehicle Specification">
      </div>
      <div class="vehicle-advantages-show-content font-eczar">
        {{ section.settings.text }}
      </div>
    </div>
{% if section.settings.footer-image %}
  <div class="image-show-footer">
    <img src="{{ section.settings.footer-image | img_url: 'master' }}" alt="Footer">
    <div class="image-show-footer__text">{{ section.settings['down-text'] }}</div>
  </div>
{% endif %}

{% if section.settings.footer-image1 %}
  <div class="image-show-footer-tablet">
    <img src="{{ section.settings.footer-image1 | img_url: 'master' }}" alt="Footer">
  </div>
{% endif %}

{% if section.settings.footer-image2 %}
  <div class="image-show-footer-mobile">
    <img src="{{ section.settings.footer-image2 | img_url: 'master' }}" alt="Footer">
  </div>
{% endif %}

  </div>
</div>

{% schema %}
{
  "name": "Vehicle Advantages Show",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "Text"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin Bottom",
      "default": 36
    },
       {
      "type": "image_picker",
      "id": "footer-image",
      "label": "Footer Image"
    },
    {
      "type": "image_picker",
      "id": "footer-image1",
      "label": "Footer Image Tablet"
    },
    {
      "type": "image_picker",
      "id": "footer-image2",
      "label": "Footer Image Mobile"
    }
  ],
  "presets": [
    {
      "name": "Vehicle Advantages Show",
      "category": "Vehicle"
    }
  ]
}
{% endschema %}
