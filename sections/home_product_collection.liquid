{% schema %}
{
  "name": "Home Product Collection",
  "settings": [],
  "blocks": [
    {
      "type": "product_card",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Select product"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [{
    "name": "Home Product Collection"
  }]
}
{% endschema %}
    <div class="page-width">
    <div class="collection-slider-section">
      <div class="swiper mySwiper">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            {% assign product = block.settings.product %}
            {% if product %}
              <div class="swiper-slide">
                 <div class="main-product-section">
                      <div class="product-col-1">
                        <div class="product-avaliable">Avaliable</div>
                         <div class="relative_img">
                         <img alt="{{ product.title }}" class="prd-img" src="{{ product.featured_image | img_url: 'large' }}"/>
                         <div class="badge left">
                          Vehicle
                         </div>
                         </div>
                      </div>
                      <div class="product-col-2">
                        <div class="product-avaliable">Avaliable</div>
                        <div class="relative_img">
                         <img alt="{{ product.title }}" class="prd-img" src="{{ product.featured_image | img_url: 'large' }}"/>
                         <div class="badge right">
                          Vehicle
                         </div>
                         </div>
                      </div>
                 </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
    
        <!-- Slider navigation -->
<div class="slider-controls">
  <div class="swiper-button-prev"></div>
  <div class="swiper-pagination"></div>
  <div class="swiper-button-next"></div>
</div>
      </div>
    </div>
    </div>
    
    <!-- Swiper JS (Add this only once per theme if not already included) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>
    
    <script>
      document.addEventListener('DOMContentLoaded', function () {
        new Swiper('.mySwiper', {
          slidesPerView: 1,
          spaceBetween: 30,
          loop: true,
          pagination: {
            el: ".swiper-pagination",
            clickable: true,
          },
          navigation: {
            nextEl: ".swiper-button-next",
            prevEl: ".swiper-button-prev",
          },
          breakpoints: {
            768: {
              slidesPerView: 1
            },
            1024: {
              slidesPerView: 1
            }
          }
        });
      });
    </script>
    
    <style>
.main-product-section {
    display: flex;
   gap:4rem;
}
      .product-avaliable {
    background-color: #6B8D50;
    text-align: center;
    color: white;
    font-family: VVDS Fifties;
    font-size: 24px;
}
  .main-product-section .prd-img {
    width: 100%;
    height: 300px;
}
 .product-col-1{
   width:100%;
 border: 5px solid rgba(var(--color-secondary-button-text));
 }     
.product-col-2{
  width:100%;
   border: 5px solid rgba(var(--color-secondary-button-text));
}
    </style>

