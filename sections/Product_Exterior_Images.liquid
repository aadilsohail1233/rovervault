<div class="section-{{ section.id }}">
<div class="page-width">
<div class="video-tabs-wrapper">
  <div class="video-full-tabs">
     <div class="video-text"> 
  <h2 class="video-title">Exterior</h2> 
     </div>
  <div class="videos-tabs"> 
  <div class="video-tabs">
    <button class="tab-link active" data-tab="body">Body</button>
    <button class="tab-link" data-tab="wheels">Wheels</button>
    <button class="tab-link" data-tab="door">Door</button>
    <button class="tab-link" data-tab="engine">Engine</button>
  </div>
     </div>     
  </div>
  <div class="tab-content" id="body">
    
{% assign images = product.metafields.custom.exterior_body_image_2.value %}

<pre>{{ product.metafields.custom.exterior_body_image_2 }}</pre>
{% if product.metafields.custom.exterior_body_image_2 != blank %}
  <div class="images_all_out">
    {% assign images = product.metafields.custom.exterior_body_image_2.value %}
    {% for image in images limit: 4 %}
      {% assign mod_check = forloop.index0 | modulo: 2 %}
      {% if mod_check == 0 %}
        <div class="parent-row">
      {% endif %}

      <div class="image-box-{{ forloop.index }} exterior-image">
        <img src="{{ image | image_url: width: 600 }}" alt="Exterior Image {{ forloop.index }}" />
      </div>

      {% assign mod_check_end = forloop.index0 | modulo: 2 %}
      {% if mod_check_end == 1 or forloop.last %}
        </div>
      {% endif %}
    {% endfor %}
  {% assign image_ids = images | split: ',' %}
  <pre>{{ image_ids }}</pre>
<div class="total-images"> Total Images {{ image_ids.size }}</div>
    {% if images.size > 4 %}
      <div class="view-all-box" style="display: flex; justify-content: flex-end;">
        <a href="#view-all" style="background: #c89c29; color: white; padding: 10px 20px; text-decoration: none; font-weight: bold;">
          VIEW ALL {{ images.size }} PICTURES
        </a>
      </div>
    {% endif %}
  </div>
{% endif %}





  </div>
  <div class="tab-content" id="wheels" style="display: none;">
    {{ product.metafields.custom.startup_video_embed }}
  </div>
  <div class="tab-content" id="door" style="display: none;">
    {{ product.metafields.custom.techinal_video_embed }}
  </div>
  <div class="tab-content" id="engine" style="display: none;">
    {{ product.metafields.custom.drive_video_embed }}
  </div>
</div>
</div>
</div>  
<style>
.video-tabs-wrapper {
/*  background-color: #e6e4ce; */
  padding: 20px;
  font-family: Arial, sans-serif;
  border-top: 5px solid #6B8D50;
}

.video-title {
  color: #567336;
  font-weight: bold;
  font-size: 50px;
  margin-bottom: 20px;
  font-family:'VVDS Fifties';
  margin-top:0px;
}
.video-text {
    width: 15%;
}
.video-tabs {
  display: flex;
  gap: 15px;
  margin-bottom: 15px;
}
  .videos-tabs {
    width: 85%;
}

.tab-link {
  background-color: #d6d7bc;
  border: none;
  padding: 10px 30px;
  cursor: pointer;
  font-size: 14px;
  color: #567336;
  transition: background-color 0.3s;
  font-family: Eczar;
    font-size: 20px;
  width:25%;
}

.tab-link.active {
  background-color: #688c45;
  color: white;
  font-family: Eczar;
  font-size: 20px;
}

.tab-content {
/*  background: white;
  padding: 20px;
  border: 1px solid #d6d7bc; */
}
</style>

<script>
document.querySelectorAll('.tab-link').forEach(function(button) {
  button.addEventListener('click', function() {
    // Remove active class from all tabs
    document.querySelectorAll('.tab-link').forEach(function(btn) {
      btn.classList.remove('active');
    });
    // Add active class to the clicked tab
    this.classList.add('active');

    // Hide all contents
    document.querySelectorAll('.tab-content').forEach(function(content) {
      content.style.display = 'none';
    });

    // Show the clicked content
    var tabId = this.getAttribute('data-tab');
    document.getElementById(tabId).style.display = 'block';
  });
});
</script>


