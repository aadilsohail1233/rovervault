{%- style -%}
  .section-{{ section.id }} {
    margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ section.settings.margin_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }} {
      margin-top: {{ section.settings.margin_top }}px;
      margin-bottom: {{ section.settings.margin_bottom }}px;
    }
  }

  .logo-with-text-small-wrapper {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 42px;
  }

  .logo-image-wrapper {
    width: 15%;
  }

  .text-image-wrapper {
    flex: 1;
  }

  .logo-with-text-small-wrapper img {
    width: 100%;
  }
{%- endstyle -%}

<div class="section-{{ section.id }} gradient color-{{ section.settings.section_color_scheme }}">
  <div class="page-width">
    <div class="logo-with-text-small-wrapper">
      <div class="logo-image-wrapper">
        <img
          src="{{ section.settings.logo_image | img_url: 'master' }}"
          class="logo-image-wrapper__image"
          alt="Logo"
        >
      </div>

      <div class="text-image-wrapper">
        <img
          src="{{ section.settings.text_image | img_url: 'master' }}"
          class="text-image-wrapper__image"
          alt="Text Image"
        >
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Logo with Text Small",
  "class": "logo-with-text",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo_image",
      "label": "Logo Image"
    },
    {
      "type": "image_picker",
      "id": "text_image",
      "label": "Text Image"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin Bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Logo With Text Small",
      "category": "section"
    }
  ]
}
{% endschema %}
