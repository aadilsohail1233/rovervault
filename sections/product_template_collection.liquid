{% schema %}
{
  "name": "Product Collection",
  "settings": [
    {
      "type": "collection",
      "id": "selected_collection",
      "label": "Select Collection"
    }
  ],
  "blocks": [
    {
      "type": "tab",
      "name": "Tab",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Tab Text"
        },
        {
          "type": "collection",
          "id": "collection",
          "label": "Select Collection"
        },
        {
          "type": "checkbox",
          "id": "active",
          "label": "Set as Active"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Collection",
      "blocks": [
        {
          "type": "tab",
          "settings": {
            "text": "All",
            "collection": "",
            "active": true
          }
        },
        {
          "type": "tab",
          "settings": {
            "text": "Range Rover",
            "collection": "",
            "active": false
          }
        },
        {
          "type": "tab",
          "settings": {
            "text": "Discovery",
            "collection": "",
            "active": false
          }
        },
        {
          "type": "tab",
          "settings": {
            "text": "Defender",
            "collection": "",
            "active": false
          }
        }
      ]
    }
  ]
}
{% endschema %}

{% assign active_found = false %}
<div class="page-width">
  <div class="range-rover-section">

    <!-- Tabs -->
    <div class="top-bar-filter desktop-filters" style="display:none;">
      <div class="tabs">
        {% for block in section.blocks %}
          {% if block.type == 'tab' %}
            <a href="javascript:void(0);" 
               class="tab {% if block.settings.active and active_found == false %}active{% assign active_found = true %}{% endif %}" 
               data-tab-id="tab-{{ forloop.index }}">
              {{ block.settings.text }}
            </a>
          {% endif %}
        {% endfor %}
      </div>
    </div>

    <div class="border-lines"></div>

    <!-- Tab Content Panels -->
    
      {% assign active_found = false %}
      {% for block in section.blocks %}
        {% if block.type == 'tab' %}
          {% assign collection = collections[block.settings.collection] %}
          {% if collection %}
