{%- style -%}
  .section-{{ section.id }}-margin {
    margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ section.settings.margin_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-margin {
      margin-top: {{ section.settings.margin_top }}px;
      margin-bottom: {{ section.settings.margin_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-margin gradient color-{{ section.settings.section_color_scheme }}">
  <div class="page-width">
    <div class="logo-with-text-wrapper">
      <div class="logo-with-text-images">
        <img
          src="{{ section.settings.first_text_image | img_url: 'master' }}"
          alt="{{ section.settings.first_text_image.alt }}"
        >
        <img
          src="{{ section.settings.second_text_image | img_url: 'master' }}"
          alt="{{ section.settings.second_text_image.alt }}"
        >
      </div>
      <div class="logo-with-text-logo">
        <img src="{{ section.settings.logo_image | img_url: 'master' }}" alt="{{ section.settings.logo_image.alt }}">
      </div>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Logo with Text",
  "class": "logo-with-text",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo_image",
      "label": "Logo Image"
    },
    {
      "type": "image_picker",
      "id": "first_text_image",
      "label": "Logo Image"
    },
    {
      "type": "image_picker",
      "id": "second_text_image",
      "label": "Logo Image"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin Bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Logo With Text",
      "category": "section"
    }
  ]
}
{% endschema %}
