{%- style -%}
  .section-{{ section.id }}-margin {
    margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ section.settings.margin_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-margin {
      margin-top: {{ section.settings.margin_top }}px;
      margin-bottom: {{ section.settings.margin_bottom }}px;
    }
  }

  .logo-with-text-wrapper {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 54px;
  }

  .logo-with-text-wrapper img {
    width: 100%;
  }

  .logo-with-text-images {
    flex: 1;
  }

  .logo-with-text-logo {
    width: 25%;
  }

  @media screen and (max-width: 850px) {
    .logo-with-text-logo {
      display: none;
    }
  }

  .logo-with-text-mobile-images {
    width: 100%;
    display: none;
  }

  @media screen and (max-width: 450px) {
    .logo-with-text-images {
      display: none;
    }

    .logo-with-text-mobile-images {
      display: block;
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-margin gradient color-{{ section.settings.section_color_scheme }}">
  <div class="page-width">
    <div class="logo-with-text-wrapper">
      <div class="logo-with-text-images">
        <div>{{ section.settings.first_text_block }}</div>
        <div>{{ section.settings.second_text_block }}</div>
      <div class="logo-with-text-mobile-images">
        <img
          src="{{ section.settings.mobile_text_image | img_url: 'master' }}"
          alt="{{ section.settings.mobile_text_image.alt }}"
        >
      </div>
      <div class="logo-with-text-logo">
      <div>{{ section.settings.mobile_text_block }}</div>
      </div>
    </div>
  </div>
</div>
</div> 
{% schema %}
{
  "name": "Text and Image",
  "class": "text-and-image",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo_image",
      "label": "Logo Image"
    },
     {
      "type": "textarea",
      "id": "first_text_block",
      "label": "First Text Block"
    },
    {
      "type": "textarea",
      "id": "second_text_block",
      "label": "Second Text Block"
    },
    {
      "type": "textarea",
      "id": "mobile_text_block",
      "label": "Mobile Text Block"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin Bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Text and Image",
      "category": "section"
    }
  ]
}
{% endschema %}
