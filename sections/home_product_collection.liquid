{% schema %}
{
  "name": "Home Product Collection",
  "settings": [],
  "blocks": [
    {
      "type": "product_card",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Select product"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [{
    "name": "Home Product Collection"
  }]
}
{% endschema %}
    <div class="page-width">
    <div class="collection-slider-section">
      <div class="swiper mySwiper">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            {% assign product = block.settings.product %}
            {% if product %}
              <div class="swiper-slide">
                 <div class="main-product-section">
                      <div class="product-col-1">
                        <div class="product-avaliable">Avaliable</div>
                         <div class="relative_img">
                         <img alt="{{ product.title }}" class="prd-img" src="{{ product.featured_image | img_url: 'large' }}"/>
                         <div class="badge left">
                          {{ product.collections.first.title | default: "Vehicle" }}
                         </div>
                         </div>
                          <div class="product-col-title">{{ product.title }}</div>
                          <div class="product-details-col product-b-top product-b-bottom">
                          <div class="cl-title">Engine</div>
                          <div class="cl-description"> {{ product.metafields.vehicles_main.engine }}</div>  
                          </div>
                      </div>
                      <div class="product-col-2">
                        <div class="product-avaliable">Avaliable</div>
                        <div class="relative_img">
                         <img alt="{{ product.title }}" class="prd-img" src="{{ product.featured_image | img_url: 'large' }}"/>
                         <div class="badge right">
                          {{ product.collections.first.title | default: "Vehicle" }}
                         </div>
                         </div>
                        <div class="product-col-title">Details</div>
                      </div>
                 </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
    
        <!-- Slider navigation -->
<div class="slider-controls">
  <div class="swiper-button-prev"></div>
  <div class="swiper-pagination"></div>
  <div class="swiper-button-next"></div>
</div>
      </div>
    </div>
    </div>
    
    <!-- Swiper JS (Add this only once per theme if not already included) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>
    
    <script>
      document.addEventListener('DOMContentLoaded', function () {
        new Swiper('.mySwiper', {
          slidesPerView: 1,
          spaceBetween: 30,
          loop: true,
          pagination: {
            el: ".swiper-pagination",
            clickable: true,
          },
          navigation: {
            nextEl: ".swiper-button-next",
            prevEl: ".swiper-button-prev",
          },
          breakpoints: {
            768: {
              slidesPerView: 1
            },
            1024: {
              slidesPerView: 1
            }
          }
        });
      });
    </script>
    
    <style>
.main-product-section {
    display: flex;
   gap:4rem;
}
.relative_img {
    position: relative;
}
      .product-b-top {
    border-top: 5px solid #6B8D50;
}
      .product-b-bottom {
    border-bottom: 5px solid #6B8D50;
}
      .badge.left {
    position: absolute;
    left: 15px;
    top: 20px;
    background-color: #C18A14;
    color: white;
    border-radius: 0px;
    padding: 10px 15px;
    font-family: 'Eczar';
    font-size: 16px;
}
      .cl-description {
    font-family: 'Eczar';
    font-size: 20px;
      color:#6B8D50;     
}
      .product-details-col {
    display: flex;
    justify-content: space-between;
    width: 60%;
    margin: 0 auto;
    align-items:center;    
}
      .cl-title {
    font-family: 'VVDS Fifties';
    font-size: 40px;
    color:#6B8D50;    
}
            .badge.right {
    position: absolute;
    left: 15px;
    top: 20px;
    background-color: #C18A14;
    color: white;
    border-radius: 0px;
    padding: 10px 15px;
    font-family: 'Eczar';
    font-size: 16px;
}
      .product-col-title {
    text-align: center;
    font-family: VVDS Fifties;
    font-size: 65px;
    color: #6B8D50;
}
      .product-avaliable {
    background-color: #6B8D50;
    text-align: center;
    color: white;
    font-family: VVDS Fifties;
    font-size: 24px;
}
