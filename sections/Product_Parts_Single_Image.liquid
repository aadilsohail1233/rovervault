<div class="section-{{ section.id }}">
  <div class="product-parts-single-image" style="width: 100%;">
    {% if product.metafields.custom.parts_single_image %}
      <img 
        src="{{ product.metafields.custom.parts_single_image | image_url: width: 2000 }}" 
        alt="{{ product.metafields.custom.parts_single_image.alt | escape }}" 
        loading="lazy"
        style="width: 100%; height: auto; display: block;"
      >
    {% else %}
      <p>No image available.</p>
    {% endif %}
  </div>
</div>  

