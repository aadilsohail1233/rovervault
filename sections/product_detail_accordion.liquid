    }
  ]
}
{% endschema %}

<style>
.custom-accordion {
  background-color: #f2f0d9;
  margin-top: 30px;
  margin-bottom: 30px;
  cursor: pointer;
  transition: all 0.3s ease-in-out;
  position: relative;
  max-width: 100%;
}
.accordion-header strong {
    font-size: 30px;
    padding-left: 5px;
}
.accordion-header {
  background-color: #CBD2B5;
  padding: 15px;
  font-weight: bold;
  color: #50793a;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-family: 'VVDS Fifties';
}

.accordion-toggle {
  transition: transform 0.3s ease;
}

.accordion-content {
  display: none;
  padding: 0px 20px 20px 20px;
  background-color: #CBD2B5;
  color: #6B8D50;
  font-size: 14px;
  line-height: 1.5;
  font-family: Eczar;
  font-size: 20px;
}


.custom-accordion.open .accordion-content {
  display: block;
}

.custom-accordion.open .accordion-toggle {
  transform: rotate(180deg);
}
</style>
<div class="section-{{ section.id }}">
  <div class="page-width">
<div class="custom-accordion open">
  <div class="accordion-header">
    {% if collection.title == "Parts" or collection.title == "Drip" %}
    <strong>DESCRIPTION</strong>    
      {% else %}
    <strong>PROVENANCE</strong> 
     {% endif %} 
    
  <!--  <span class="accordion-toggle">&#x25BC;</span>-->
  </div>
  <div class="accordion-content">
    {% if collection.title == "Parts" or collection.title == "Drip" %} 
                {% if product.metafields.custom.description != blank %}
            {{ product.metafields.custom.description}}
            {% else %}
            None
            {% endif %} 
      {% else %}
      {% if product.metafields.custom.provenance != blank %}
            {{ product.metafields.custom.provenance }}
            {% else %}
            None
            {% endif %} 
     {% endif %} 
    

    <div class="single-price">
        {% if product.price %}
            <div>{{ product.price | money }}</div>
          {% else %}
            <div></div>
          {% endif %}
      
    </div>
   <div class="single-product-cart">
    <form method="post" action="/cart/add">
      <input type="hidden" name="id" value="{{ product.variants.first.id }}">
      <button type="submit" class="button--main">Add to cart</button>
    </form>
   </div>
  </div>
</div>
  </div>
</div>
