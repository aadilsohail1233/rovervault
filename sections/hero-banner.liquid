{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Hero Image"
    },
    {
      "type": "text",
      "id": "heading_text",
      "label": "Heading Text",
      "default": "ROVER VAULT"
    },
    {
      "type": "text",
      "id": "subheading_text",
      "label": "Subheading Text",
      "default": "CARS • PARTS • ART • DRIP"
    },
    {
      "type": "image_picker",
      "id": "badge_image",
      "label": "Badge Image (e.g. Hemmings)"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %}
 <div class="page-width"> 
<div class="custom-hero-banner" style="background-image: url({{ section.settings.banner_image | img_url: 'master' }});">
  
  <div class="hero-content">
    <h1>{{ section.settings.heading_text }}</h1>
    <p>{{ section.settings.subheading_text }}</p>
    {% if section.settings.badge_image %}
      <div class="hemings-badge">
        Listed on:<br>
        <img src="{{ section.settings.badge_image | img_url: '100x' }}" alt="Badge">
      </div>
    {% endif %}
  </div>

</div>
</div>
<style>
.custom-hero-banner {
    background-size: contain;
    background-position: center;
    height: 600px;
    position: relative;
    display: block;
    background-repeat: no-repeat;
    padding-right: 5%;
    color: white;
}

.hero-content {
  max-width: 500px;
}

.hero-content h1 {
  font-size: 60px;
  font-weight: bold;
  margin: 0;
}

.hero-content p {
  font-size: 20px;
  letter-spacing: 2px;
}

.hemings-badge {
  margin-top: 20px;
  font-size: 14px;
}

.hemings-badge img {
  height: 30px;
  margin-top: 5px;
}
</style>
