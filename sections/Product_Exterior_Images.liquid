<div class="section-{{ section.id }}">
<div class="page-width">
<div class="video-tabs-wrapper">
  <div class="video-full-tabs">
     <div class="video-text"> 
  <h2 class="video-title">Exterior</h2> 
     </div>
  <div class="videos-tabs"> 
  <div class="video-tabs">
    <button class="tab-link active" data-tab="body">Body</button>
    <button class="tab-link" data-tab="wheels">Wheels</button>
    <button class="tab-link" data-tab="door">Door</button>
    <button class="tab-link" data-tab="engine">Engine</button>
  </div>
     </div>     
  </div>
  <div class="tab-content" id="body">
{% assign images = product.metafields.custom.exterior_body_image_2.value %}
{% if images != blank %}
  <div style="background-color: #f2f0db; padding: 20px;">
    <div style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 15px;">
      {% for image in images limit: 5 %}
        <div style="border: 3px solid #94a973; padding: 4px; background: white;">
          <img src="{{ image | image_url: width: 600 }}" alt="Image {{ forloop.index }}" style="width: 100%; height: auto;" />
        </div>
      {% endfor %}

      <!-- CTA Box (last column of second row) -->
      <div style="background-color: #c89c29; color: white; display: flex; justify-content: center; align-items: center; font-weight: bold; font-size: 16px;">
        <a href="#view-all" style="color: white; text-decoration: none; padding: 20px; display: block; width: 100%; height: 100%; text-align: center;">
          VIEW ALL {{ images.size }} PICTURES
        </a>
      </div>
    </div>
  </div>
{% endif %}


  </div>
  <div class="tab-content" id="wheels" style="display: none;">
    {{ product.metafields.custom.startup_video_embed }}
  </div>
  <div class="tab-content" id="door" style="display: none;">
    {{ product.metafields.custom.techinal_video_embed }}
  </div>
  <div class="tab-content" id="engine" style="display: none;">
    {{ product.metafields.custom.drive_video_embed }}
  </div>
</div>
</div>
</div>  
<style>
.video-tabs-wrapper {
/*  background-color: #e6e4ce; */
  padding: 20px;
  font-family: Arial, sans-serif;
  border-top: 5px solid #6B8D50;
}

.video-title {
  color: #567336;
  font-weight: bold;
  font-size: 50px;
  margin-bottom: 20px;
  font-family:'VVDS Fifties';
  margin-top:0px;
}
.video-text {
    width: 15%;
}
.video-tabs {
  display: flex;
  gap: 15px;
  margin-bottom: 15px;
}
  .videos-tabs {
    width: 85%;
}

.tab-link {
  background-color: #d6d7bc;
  border: none;
  padding: 10px 30px;
  cursor: pointer;
  font-size: 14px;
  color: #567336;
  transition: background-color 0.3s;
  font-family: Eczar;
    font-size: 20px;
  width:25%;
}

.tab-link.active {
  background-color: #688c45;
  color: white;
  font-family: Eczar;
  font-size: 20px;
}

.tab-content {
/*  background: white;
  padding: 20px;
  border: 1px solid #d6d7bc; */
}
</style>

<script>
document.querySelectorAll('.tab-link').forEach(function(button) {
  button.addEventListener('click', function() {
    // Remove active class from all tabs
    document.querySelectorAll('.tab-link').forEach(function(btn) {
      btn.classList.remove('active');
    });
    // Add active class to the clicked tab
    this.classList.add('active');

    // Hide all contents
    document.querySelectorAll('.tab-content').forEach(function(content) {
      content.style.display = 'none';
    });

    // Show the clicked content
    var tabId = this.getAttribute('data-tab');
    document.getElementById(tabId).style.display = 'block';
  });
});
</script>


