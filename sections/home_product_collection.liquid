    <!-- Swiper JS (Add this only once per theme if not already included) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>
    
    <script>
      document.addEventListener('DOMContentLoaded', function () {
        new Swiper('.mySwiper', {
          slidesPerView: 1,
          spaceBetween: 30,
          loop: true,
          pagination: {
            el: ".swiper-pagination",
            clickable: true,
          },
          navigation: {
            nextEl: ".swiper-button-next",
            prevEl: ".swiper-button-prev",
          },
          breakpoints: {
            768: {
              slidesPerView: 1
            },
            1024: {
              slidesPerView: 1
            }
          }
        });
      });
    </script>
    
    <style>
   .main-card {
            background-color: #e5e7d4;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            margin: 0;
            font-family: Arial, sans-serif;
        }
        .container {
            display: flex;
            gap: 16px;
        }
        .card {
            background-color: #d1d7b7;
            padding: 16px;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            width: 320px;
            position: relative;
        }
        .card.green {
            background-color: #6b8b4f;
        }
        .card img {
            width: 100%;
            border-radius: 8px;
        }
        .badge {
            position: absolute;
            background-color: #b3a16b;
            color: white;
            padding: 4px 8px;
            border-radius: 4px;
        }
        .badge.left {
            top: 8px;
            left: 8px;
        }
        .badge.right {
            top: 8px;
            right: 8px;
        }
        .card h2 {
            text-align: center;
            color: #7a8b4f;
            font-size: 24px;
            margin: 16px 0;
        }
        .card.green h2 {
            color: white;
        }
        .details {
            display: flex;
            justify-content: space-between;
            color: #7a8b4f;
            margin: 8px 0;
        }
        .card.green .details {
            color: white;
        }
        .button {
            display: block;
            background-color: #f39200;
            color: white;
            text-align: center;
            padding: 8px 16px;
            border-radius: 9999px;
            margin: 16px auto 0;
            text-decoration: none;
        }
        .navigation {
            display: flex;
            align-items: center;
            gap: 16px;
            margin-top: 32px;
        }
        .navigation i {
            color: #7a8b4f;
        }
        .dots {
            display: flex;
            gap: 8px;
        }
        .dot {
            width: 8px;
            height: 8px;
            background-color: #7a8b4f;
            border-radius: 50%;
        }
.slider-controls {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20px;
  gap: 20px;
  position: relative;
}

.swiper-button-prev,
.swiper-button-next {
  position: static; /* override Swiper default absolute */
  width: 35px;
  height: 35px;
  background: #6a7e3f;
  border-radius: 50%;
  color: #fff;
  font-size: 18px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.swiper-button-prev::after,
.swiper-button-next::after {
  font-size: 16px;
}

.swiper-pagination {
  position: static;
  display: flex;
  gap: 6px;
}

