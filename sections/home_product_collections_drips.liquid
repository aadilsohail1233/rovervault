{% schema %}
{
  "name": "Home Product Drips",
  "settings": [
{
      "type": "text",
      "id": "collection_name",
      "label": "Collection Name",
      "default": "Featured Collection"
    }
    
  ],
  "blocks": [
    {
      "type": "product_card",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Select product"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [{
    "name": "Home Product Drips"
  }]
}
{% endschema %}
    <div class="page-width">
    <div class="collection-slider-section padding-bottom-zero">
      <div class="swiper mySwiper4">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            {% assign product = block.settings.product %}
            {% if product %}
              <div class="swiper-slide">
                 <div class="content">
                    <div class="cards">
                     <div class="card"> 

                      <div class="card__side card__side--front card__side--front-1"> 
                      <div class="product-col-1">
                        <div class="product-avaliable">
                        {% if product.available %}
                          <div class="product-avaliable">Available</div>
                        {% else %}
                          <div class="product-avaliable">Sold</div>
                        {% endif %}
                        </div>
                         <div class="relative_img">
                         <img alt="{{ product.title }}" class="prd-img-others" src="{{ product.featured_image | img_url: 'large' }}"/>
                         <div class="badge left">
                          {{ section.settings.collection_name }}
                         </div>
                         <div class="badge rights">
                           <a href="#">
                          <img src="https://cdn.shopify.com/s/files/1/0694/0314/8465/files/Group_620.png?v=1745422926" />
                           </a>
                           </div>  
                         </div>
                          <div class="product-col-title">{{ product.title }}</div>
                        <div class="button-product margin-button-bottom"><a href="{{ product.url }}" class="button--main">View full listing</a></div>
                      </div>
                       </div>
                  <div class="card__side card__side--back card__side--back-1">
                     <div class="product-col-2">
                        <div class="product-avaliable">
                          {% if product.available %}
                          <div class="product-avaliable">Available</div>
                        {% else %}
                          <div class="product-avaliable">Sold</div>
                        {% endif %}
                        </div>
                        <div class="relative_img">
                          {% assign second_image = product.images[1] %}
                         <img alt="{{ product.title }}" class="prd-img" src="{% if second_image %}{{ second_image | img_url: 'large' }}{% else %}{{ product.featured_image | img_url: 'large' }}{% endif %}" />
                         <div class="badge right">
                         {{ section.settings.collection_name }}
                         </div>
                         <div class="badge lefts">
                          <a href="#">  
                          <img src="https://cdn.shopify.com/s/files/1/0694/0314/8465/files/Group_620.png?v=1745422926" />
                          </a>  
                         </div> 
                        </div>
                        <div class="product-col-title white-color">{{ product.title }}</div>
                        <div class="button-product margin-button-bottom"><a href="{{ product.url }}" class="button--main">View full listing</a></div>
                     </div>   
                    </div> 

                     </div> 
                     </div>
                 </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
    

      </div>
                    <!-- Slider navigation -->
  <div class="swiper-controls-wrap">
    <div class="slider-controls">
  <div class="swiper-button-prev">
<svg width="67" height="46" viewBox="0 0 67 46" fill="none" xmlns="http://www.w3.org/2000/svg">
<path d="M24 3L4 23M4 23L24 43M4 23H64" stroke="#6B8D50" stroke-width="5" stroke-linecap="round"/>
</svg>

</div>
  <div class="swiper-pagination4"></div>
  <div class="swiper-button-next">
<svg width="67" height="46" viewBox="0 0 67 46" fill="none" xmlns="http://www.w3.org/2000/svg">
<path d="M43 3L63 23M63 23L43 43M63 23H3" stroke="#6B8D50" stroke-width="5" stroke-linecap="round"/>
</svg>

</div>
</div>
  </div>
    </div>

    </div>
    
    <!-- Swiper JS (Add this only once per theme if not already included) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>
    
    <script>
document.addEventListener('DOMContentLoaded', function () {
  new Swiper('.mySwiper4', {
    slidesPerView: 3,
    spaceBetween: 30,
    loop: true,
    pagination: {
      el: ".swiper-pagination4",
      clickable: true,
    },
    navigation: {
      nextEl: ".swiper-button-next",
      prevEl: ".swiper-button-prev",
    },
    breakpoints: {
 0: {
    slidesPerView: 1
  },
  768: {
    slidesPerView: 2
  },
  1025: {
    slidesPerView: 3
  }
    }
  });
});
    </script>

      <script>
document.addEventListener('DOMContentLoaded', function () {
  const flipToBackButtons = document.querySelectorAll('.badge.lefts a');
  const flipToFrontButtons = document.querySelectorAll('.badge.rights a');

  // Flip to back
  flipToBackButtons.forEach(button => {
    button.addEventListener('click', function (e) {
      e.preventDefault();
      if (window.innerWidth <= 767) {
        const card = this.closest('.card');
        card.classList.remove('frontflipped');
        card.classList.add('flipped');
      }
    });
  });

  // Flip to front
  flipToFrontButtons.forEach(button => {
    button.addEventListener('click', function (e) {
      e.preventDefault();
      if (window.innerWidth <= 767) {
        const card = this.closest('.card');
        card.classList.remove('flipped');
        card.classList.add('frontflipped');
      }
    });
  });
});
</script>
    
